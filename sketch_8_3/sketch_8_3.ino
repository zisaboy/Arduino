#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,16,2);

byte sp[6][8] = {
  {0x04,0x0E,0x1F,0x15,0x1F,0x0E,0x0A,0x11},
  {0x04,0x0E,0x1F,0x1A,0x1F,0x04,0x0A,0x0A},
  {0x04,0x0E,0x1F,0x1E,0x1F,0x0E,0x04,0x04},
  {0x04,0x0E,0x1F,0x1F,0x1F,0x04,0x0A,0x0A},
  {0x04,0x0E,0x1F,0x0F,0x1F,0x0E,0x04,0x04},
  {0x04,0x0E,0x1F,0x0D,0x1F,0x04,0x0A,0x0A}
};

byte index = 0;

void setup() {
  // put your setup code here, to run once:
  lcd.init();
  lcd.backlight();

  for(byte i=0;i<6;i++)
  {
    lcd.createChar(i,sp[i]);
  }

  lcd.home();
  lcd.print("Invader");

}

void loop() {
  // put your main code here, to run repeatedly:
  lcd.setCursor(8,0);
  lcd.write(index);

  if(++index > 5)
  {
    index = 0;
  }

  delay(300);
}
